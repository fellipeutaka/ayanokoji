{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2023",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Bundler",
    "module": "es2022",
    "noEmit": true,
    "lib": ["es2022"],

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
